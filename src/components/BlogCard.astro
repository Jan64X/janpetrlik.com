---
interface Props {
  title: string;
  date: string;
  description: string;
  slug: string;
  tags?: string[];
}

const { title, date, description, slug, tags = [] } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="blog-card">
  <div class="blog-header">
    <h3 class="blog-title">
      <a href={`/blog/${slug}`}>{title}</a>
    </h3>
    <time class="blog-date" datetime={date}>{formattedDate}</time>
  </div>
  
  <p class="blog-description">{description}</p>
  
  {tags.length > 0 && (
    <div class="blog-tags">
      {tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  )}
  
  <a href={`/blog/${slug}`} class="read-more">
    Read more â†’
  </a>
</article>

<style>
  .blog-card {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: var(--spacing-lg);
    transition: border-color 0.2s;
  }
  
  .blog-card:hover {
    border-color: var(--accent);
  }
  
  .blog-header {
    margin-bottom: var(--spacing-sm);
  }
  
  .blog-title {
    margin: 0 0 var(--spacing-xs) 0;
    font-size: 1.5rem;
  }
  
  .blog-title a {
    color: var(--text-primary);
  }
  
  .blog-title a:hover {
    color: var(--accent);
  }
  
  .blog-date {
    color: var(--text-muted);
    font-size: 0.9rem;
    font-family: var(--font-mono);
  }
  
  .blog-description {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
  }
  
  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-md);
  }
  
  .tag {
    background-color: var(--bg-tertiary);
    color: var(--accent);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.85rem;
    font-family: var(--font-mono);
  }
  
  .read-more {
    display: inline-flex;
    align-items: center;
    font-weight: 500;
    color: var(--accent);
  }
  
  .read-more:hover {
    color: var(--accent-hover);
  }
</style>
