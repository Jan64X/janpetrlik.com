<style>
  .hero {
    padding: var(--spacing-xl) 0;
    max-width: 800px;
  }
  
  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-sm);
    color: var(--text-primary);
  }
  
  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
  }
  
  .hero-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: var(--spacing-lg);
  }
  
  .hero-links {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.2s;
    border: 1px solid transparent;
  }
  
  .btn-primary {
    background-color: var(--accent);
    color: var(--bg-primary);
  }
  
  .btn-primary:hover {
    background-color: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(88, 166, 255, 0.3);
  }
  
  .btn-secondary {
    background-color: var(--bg-secondary);
    border-color: var(--border);
    color: var(--text-primary);
  }
  
  .btn-secondary:hover {
    border-color: var(--accent);
    background-color: var(--bg-tertiary);
    transform: translateY(-2px);
  }
  
  .section {
    margin-top: var(--spacing-xl);
    padding-top: var(--spacing-xl);
  }
  
  .highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-lg);
  }
  
  .highlight-card {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: var(--spacing-lg);
    transition: border-color 0.2s, transform 0.2s;
  }
  
  .highlight-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
  }
  
  .highlight-icon {
    font-size: 2rem;
    margin-bottom: var(--spacing-md);
  }
  
  .highlight-card h3 {
    margin-top: 0;
    margin-bottom: var(--spacing-sm);
    font-size: 1.2rem;
  }
  
  .highlight-card p {
    margin-bottom: 0;
    font-size: 0.95rem;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-lg);
  }
  
  .section-link {
    margin-top: var(--spacing-lg);
    text-align: center;
  }
  
  .link-arrow {
    font-size: 1.1rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
  }
  
  .tech-summary {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-lg);
  }
  
  .tech-column {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: var(--spacing-lg);
  }
  
  .tech-column h3 {
    margin-top: 0;
    margin-bottom: var(--spacing-md);
    color: var(--accent);
    font-size: 1.1rem;
  }
  
  .tech-column ul {
    margin: 0;
    list-style: none;
  }
  
  .tech-column li {
    color: var(--text-secondary);
    padding: 0.4rem 0;
    padding-left: 1.5rem;
    position: relative;
  }
  
  .tech-column li::before {
    content: "‚ñπ";
    position: absolute;
    left: 0;
    color: var(--accent);
  }
  
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.2rem;
    }
    
    .hero-description {
      font-size: 1rem;
    }
    
    .highlights {
      grid-template-columns: 1fr;
    }
    
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>