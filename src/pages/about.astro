<style>
  .about-header {
    max-width: 800px;
    margin-bottom: var(--spacing-xl);
  }
  
  .lead {
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.8;
  }
  
  .section {
    margin-top: var(--spacing-xl);
  }
  
  .experience-item {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }
  
  .experience-item h3 {
    margin-top: 0;
    margin-bottom: var(--spacing-md);
    color: var(--accent);
  }
  
  .experience-item p {
    margin-bottom: var(--spacing-md);
  }
  
  .experience-item p:last-child {
    margin-bottom: 0;
  }
  
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-lg);
  }
  
  .certifications {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-lg);
  }
  
  .cert-card {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: var(--spacing-lg);
    text-align: center;
    transition: border-color 0.2s, transform 0.2s;
  }
  
  .cert-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
  }
  
  .cert-icon {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
  }
  
  .cert-card h3 {
    margin-top: 0;
    margin-bottom: var(--spacing-sm);
    font-size: 1.1rem;
  }
  
  .cert-card p {
    margin-bottom: 0;
    font-size: 0.9rem;
  }

  .daily-intro {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
  }

  .hardware-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }

  .hardware-item {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: var(--spacing-md);
    line-height: 1.6;
  }

  .hardware-note {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }
  
  .contact-links {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
    margin-top: var(--spacing-md);
  }
  
  .contact-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .contact-btn:hover {
    border-color: var(--accent);
    background-color: var(--bg-tertiary);
    transform: translateY(-2px);
  }
</style>